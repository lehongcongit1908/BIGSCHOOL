@model IEnumerable<BIGSCHOOL.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>

                    <div class="day">

                        @course.DateTime.ToString("dd")
                    </div>

                    <div class="detail">
                        <span class="lecture">
                            @course.LectureName

                        </span>
                        <br />

                        <span class="category">
                            @course.Category.Name

                        </span>



                    </div>
                    <div class="action">
                        <a href="#"> Edit </a>
                        <a href="#"> Delete </a>

                    </div>

                </div>
            </li>

        }

    </ul>

</div>

