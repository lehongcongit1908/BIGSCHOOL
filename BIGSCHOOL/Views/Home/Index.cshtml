@using BIGSCHOOL.Models;
@model  IEnumerable<BIGSCHOOL.Models.Course>
@{ ViewBag.Title = "Home Page"; }

<h3> Danh sách khóa học sắp tới</h3>
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @*@course.DateTime.ToString("dd/MM/yyyy HH:mm")*@
                        @course.DateTime.ToString("MM")

                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")

                    </div>

                </div>
                <div class="detail">
                    <span class="lecture">
                        @course.Name
                        @if (course.isLogin)
                        {
                            if (course.isShowFollow)
                            {
                                <button data-user-id="@course.LectureId" class="btn btn-default btn-sm js-tongle-follow">  Follow</button>

                            }
                            else
                            {
                                <button data-user-id="@course.LectureId" class="btn btn-success btn-sm js-tongle-follow">  Following</button>

                            }



                        }


                    </span>
                    <br />
                    <span class="category">
                        @course.Category.Name -- @course.Id
                        @if (course.isLogin)
                        {
                            if (course.isShowFollow)
                            {
                                <button data-course-id="@course.Id" class="btn btn-default btn-sm js-tongle-attendance">Going?</button>


                            }
                            else
                            {
                                <button data-course-id="@course.Id" class="btn btn-success btn-sm js-tongle-attendance">Going</button>

                            }

                        }


                    </span>



                </div>

            </li>
        }
    </ul>




    @section scripts{
        <script>
           
            $(".js-tongle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/Attendances", { Id: button.attr("data-course-id") })
                    .done(function (result) {
                        if (result == "cancel") {
                            alert("Cancel register course sucessfully!")
                            button
                                .removeClass("btn-info")
                                .addClass("btn-default")
                                .text("Going?");
                        } else {
                            alert("Register course sucessfully!")
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        }
                    }).fail(function () {
                        alert("Something fail");
                    });
            });
            $(".js-tongle-follow").click(function (e) {
                var button = $(e.target);
                var followee = button.attr("data-user-id");
                $.post("/api/Following", { FolloweeId: button.attr("data-user-id") })
                    .done(function (result) {
                        if (result == "cancel") {
                            $('.js-tongle-follow').each(function (i, obj) {
                                if ($(this).attr('data-user-id') == followee) {
                                    $(this).removeClass("btn-success")
                                        .addClass("btn-default")
                                        .text("Follow");
                                }
                            });
                            alert("unFollow Thành công")
                        } else {
                            $('.js-toggle-follow').each(function (i, obj) {
                                if ($(this).attr('data-user-id') == followee) {
                                    $(this).removeClass("btn-default")
                                        .addClass("btn-success")
                                        .text("Following");
                                }
                            });
                            alert("Follow Thành Công")
                        }
                    }).fail(function () {
                       @* alert("Something fail");*@
                         alert("Không thể tự follow chính mình");
                    });
            });
               
        </script>
    }

